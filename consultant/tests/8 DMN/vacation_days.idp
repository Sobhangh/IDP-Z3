

vocabulary {
	Years_of_Service: int
	Age: int
	vacationdays: int
	extra5
	extra3
	extra2
}
theory {
	//Extra 5 Days
	{
		extra5() <- Age() < 18.
		extra5() <- Age() >= 60.
		extra5() <- Years_of_Service() >= 30.
	}

	//Extra 3 Days
	{
		extra3() <- Age() >= 60.
		extra3() <- Years_of_Service() >= 30.
	}

	//Extra 2 Days
	{
		extra2() <- Age() >= 45.
		extra2() <- 15 =< Years_of_Service() & Years_of_Service() =< 30.
	}

	//Total Days
	vacationdays() = sum{ : true: 20 }+sum{ : extra2(): 2 }+sum{ : extra3(): 3 }+sum{ : extra5(): 5 }.
}


structure {
}
